<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="wormbox.server">
	<class name="Relation" table="relation">
		<id name="relationId" column="RelationID">
			<generator class="native" />
		</id>		
	
		<property name="fileId">
			<column name="FileId" not-null="true"/>
		</property>
		
		<property name="recipientId">
			<column name="RecipientId" not-null="true"/>
		</property>		
	</class>
</hibernate-mapping>