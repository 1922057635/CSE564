<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.asubank.model.account">
	<class name="PersonalAccount" table="personalaccount">
		<id name="strID" column="strid">
			<generator class="assigned" />
		</id>		
		<subclass name="checking" >
		    <property name="accountNo">
		        <column name="accountno" length="12" not-null="true" />
		    </property>
		    <property name="balance">
		        <column name="balance" not-null="true"/>
		    </property>
		</subclass>
		<subclass name="saving" >
		    <property name="accountNo">
		        <column name="accountno" length="12" not-null="true" />
		    </property>
		    <property name="balance">
		        <column name="balance" not-null="true"/>
		    </property>
		</subclass>
		<subclass name="credit">
		    <property name="accountNo">
		        <column name="accountno" length="12" not-null="true" />
		    </property>
		    <property name="balance">
		        <column name="balance" not-null="true"/>
		    </property>
		</subclass>
		
		
		<property name="maxOverDraft">
			<column name="maxoverdraft" not-null="true"/>
		</property>
		
	</class>
</hibernate-mapping>